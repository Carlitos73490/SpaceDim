<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/waitingRoomFragment"
        android:name="com.example.spacedim.WaitingRoomFragment"
        android:label="fragment_waiting_room"
        tools:layout="@layout/fragment_waiting_room" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.spacedim.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.spacedim.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_waitingRoomFragment"
            app:destination="@id/waitingRoomFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.spacedim.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>