<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="LoginViewModel"
            type="com.example.spacedim.login.LoginViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainFragment">

        <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondgalaxy"
            tools:context=".login.LoginFragment">

            <ImageView
                android:id="@+id/titleSpaceDim"
                android:layout_width="325dp"
                android:layout_height="191dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/spacedim" />

            <EditText
                android:id="@+id/editTextLogin"
                android:layout_width="240dp"
                android:layout_height="59dp"
                android:background="@drawable/background_border"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:onTextChanged="@{LoginViewModel.onTextChangedLogin}"
                android:paddingLeft="20px"
                android:text=""
                android:textColor="#8E8E8E"
                android:textColorHint="#FFE436"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--
            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:backgroundTint="#FFE436"
                android:text="Register"
                android:textColor="#000"
                app:cornerRadius="10dp"
                app:iconTint="#FFFFFF"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/titleSpaceDim"
                app:layout_constraintTop_toBottomOf="@+id/editTextLogin"
                app:layout_constraintVertical_bias="0.496"
                tools:layout_editor_absoluteX="250dp"
                tools:layout_editor_absoluteY="523dp"
                android:onClick="@{() -> LoginViewModel.getRegistrationProperty()}"/>
-->
            <!-- android:onClick="@{() -> LoginViewModel.getConnectionProperty()}"-->

            <EditText
                android:id="@+id/editTextRoom"
                android:layout_width="240dp"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_border"
                android:ems="10"
                android:hint="Room Name"
                android:inputType="textPersonName"
                android:onTextChanged="@{LoginViewModel.onTextChangedRoom}"
                android:paddingLeft="20px"
                android:text=""
                android:textColor="#8E8E8E"
                android:textColorHint="#FFE436"
                app:layout_constraintBottom_toTopOf="@+id/buttonConnection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextLogin"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/buttonConnection"
                android:layout_width="235dp"
                android:layout_height="66dp"
                android:backgroundTint="#FFE436"
                android:text="Launch"
                android:textColor="#000"
                app:cornerRadius="10dp"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editTextRoom"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/editTextRoom"
                app:layout_constraintTop_toBottomOf="@+id/editTextLogin"
                app:layout_constraintVertical_bias="0.533" />

            <TextView
                android:id="@+id/textViewResponseHttp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{LoginViewModel.response}"

                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/buttonConnection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextLogin" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>